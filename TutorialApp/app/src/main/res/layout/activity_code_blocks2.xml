<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.optly.tutorialapp.CodeBlocksActivity2"
    android:background="#c2d0df">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/optimizelyLogo1"
        android:src="@drawable/widget_co_logo_red"
        android:layout_marginTop="24dp"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true" />

    <TextView android:text="@string/code_blocks_company"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#0b3a6c"
        android:typeface="sans"
        android:fontFamily="sans-serif"
        android:id="@+id/gearSell" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/optimizelyGears"
        android:src="@drawable/gears"
        android:layout_marginTop="120dp"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="@string/code_blocks_signin"
        android:id="@+id/sign_in_2"
        android:layout_below="@+id/gearSell"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:background="#1c325a"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:onClick="goToVisualEditor"/>

</RelativeLayout>
